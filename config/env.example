# SCLU Trading System Environment Variables
# Copy this file to .env and fill in your actual values

# Kite Connect API Credentials
# Get these from your Zerodha Kite Connect app dashboard
SCLU_API_KEY=your_api_key_here
SCLU_ACCESS_TOKEN=your_access_token_here
SCLU_REQUEST_TOKEN=your_request_token_here

# Trading Configuration
SCLU_SENSITIVITY=0.01
SCLU_FEELING=3000000
SCLU_MAX_DAILY_TRADES=30
SCLU_STOP_LOSS_PCT=0.05
SCLU_TAKE_PROFIT_PCT=0.10

# Data Configuration
SCLU_DATA_DIRECTORY=data
SCLU_DATETIME_FORMAT=%Y-%m-%d %H:%M:%S+05:30

# Environment Settings
SCLU_ENVIRONMENT=development
SCLU_DEBUG=true
SCLU_LOG_LEVEL=INFO
SCLU_LOG_FILE=logs/sclu.log

# Live Trading Safety
SCLU_ENABLE_LIVE_TRADING=false
SCLU_DRY_RUN_MODE=true

# Database Configuration (if using database)
# SCLU_DATABASE_URL=sqlite:///sclu.db
# SCLU_DATABASE_HOST=localhost
# SCLU_DATABASE_PORT=5432
# SCLU_DATABASE_NAME=sclu
# SCLU_DATABASE_USER=sclu_user
# SCLU_DATABASE_PASSWORD=secure_password

# External Services (if using)
# SCLU_REDIS_URL=redis://localhost:6379/0
# SCLU_NOTIFICATION_SERVICE_URL=
# SCLU_WEBHOOK_URL=

# Monitoring and Alerts
